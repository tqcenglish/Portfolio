{% include "template/head.njk" %}
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        {% include "template/header.njk"%}
        {% include "template/header_sider.njk"%}
        <main class="mdl-layout__content">
            <div class="mdl-grid portfolio-max-width">
              {% for item in portfolios %}
                <div class="mdl-cell mdl-card mdl-shadow--4dp portfolio-card">
                    <div class="mdl-card__media">
                        <img class="article-image" src="{{item.img}}" border="0" alt="">
                    </div>
                    <div class="mdl-card__title">
                        <h2 class="mdl-card__title-text">{{item.title_text}}</h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                    {{item.supporting_text}}
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent"
                          href="/portfolio/{{item.title_text}}">查看详细</a>
                    </div>
                </div>
              {%else%}
                <div class="mdl-cell mdl-card mdl-shadow--4dp portfolio-card">
                  没有展示
                </div>  
              {%endfor%}
            </div>
            {% include "template/footer.njk"%}
        </main>
    </div>
    <script src="/js/material.min.js"></script>
</body>

</html>
